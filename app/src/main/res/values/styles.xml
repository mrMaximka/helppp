<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="general">
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.02</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:shadowColor">#4D000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="general.titleArticleBig">
        <item name="android:textSize">18sp</item>

    </style>

    <style name="general.titleNewsBig">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="general.titleArticleSmall">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="general.titleNewsSmall">
        <item name="android:textSize">16sp</item>
    </style>


    <style name="countPhoto">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.02</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>


    <style name="live_end">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.02</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>